<!-- DÁN PHẦN NÀY VÀO TRƯỚC FOOTER -->
<div id="login-modal" class="modal">
    <div class="modal-content">
        <span class="close-btn">&times;</span>
        <h2>Đăng nhập Hệ thống</h2>
        <form id="modal-login-form">
            <div class="form-group">
                <label for="username">Tên đăng nhập:</label>
                <input type="text" id="username" name="username" required placeholder="Nhập mã sinh viên hoặc email">
            </div>
            <div class="form-group">
                <label for="password">Mật khẩu:</label>
                <input type="password" id="password" name="password" required placeholder="Nhập mật khẩu của bạn">
            </div>
            <div class="form-options">
                <label>
                    <input type="checkbox" name="remember"> Ghi nhớ đăng nhập
                </label>
                <a href="#">Quên mật khẩu?</a>
            </div>
            <button type="submit" class="submit-btn">Đăng nhập</button>
            <!-- SỬA LẠI DÒNG NÀY TRONG MODAL ĐĂNG NHẬP -->
            <p class="signup-link">Chưa có tài khoản? <a href="#" id="show-signup-modal">Đăng ký tại đây</a></p>
        </form>
    </div>
</div>
<!-- DÁN PHẦN NÀY VÀO NGAY SAU MODAL ĐĂNG NHẬP -->
<div id="signup-modal" class="modal">
    <div class="modal-content">
        <span class="close-btn-signup">&times;</span>
        <h2>Đăng ký Tài khoản Mới</h2>
        <form id="modal-signup-form">
            <div class="form-group">
                <label for="signup-fullname">Họ và tên:</label>
                <input type="text" id="signup-fullname" name="fullname" required placeholder="Ví dụ: Nguyễn Văn An">
            </div>
            <div class="form-group">
                <label for="signup-username">Tên đăng nhập (Email hoặc Mã SV):</label>
                <input type="text" id="signup-username" name="username" required placeholder="Nhập email hoặc mã sinh viên">
            </div>
            <div class="form-group">
                <label for="signup-password">Mật khẩu:</label>
                <input type="password" id="signup-password" name="password" required placeholder="Tối thiểu 8 ký tự">
            </div>
            <div class="form-group">
                <label for="signup-confirm-password">Xác nhận Mật khẩu:</label>
                <input type="password" id="signup-confirm-password" name="confirm_password" required placeholder="Nhập lại mật khẩu">
            </div>
            <button type="submit" class="submit-btn">Đăng ký</button>
            <!-- SỬA LẠI DÒNG NÀY TRONG MODAL ĐĂNG KÝ -->
            <p class="login-link">Đã có tài khoản? <a href="#" id="show-login-modal">Đăng nhập ngay</a></p>
        </form>
    </div>
</div>
