@model IEnumerable<QuanLyThuVien.Models.NhaXuatBan>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/LayoutNguoiDung.cshtml";
}

<!-- ======================= PHẦN GIAO DIỆN CHUNG (ĐÃ BỔ SUNG) ======================= -->
@Html.Action("HeaderPartialView", "Admin")
<!-- ===================== KẾT THÚC PHẦN GIAO DIỆN CHUNG ===================== -->

<div class="admin-container">
    <!-- Sidebar -->
    @Html.Action("SidebarPartiView", "Admin")

    <!-- Nội dung chính -->
    <main class="admin-main-content">
        <h1><i class="fas fa-building"></i> Quản lý Nhà Xuất Bản</h1>
        <div class="toolbar">
            <input type="text" class="search-input" placeholder="Tìm kiếm theo tên NXB, địa chỉ...">
            <button id="add-nxb-btn" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm NXB Mới</button>
        </div>

        <section class="data-table-section">
            <table>
                <thead>
                    <tr>
                        <th>Mã NXB</th>
                        <th>Tên Nhà Xuất Bản</th>
                        <th>Địa chỉ</th>
                        <th>Email</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @* Dùng vòng lặp foreach để duyệt qua từng nhà xuất bản trong Model *@
                    @foreach (var item in Model)
                    {
                        <tr>
                            @* Hiển thị các thuộc tính của đối tượng NhaXuatBan *@
                            <td>@item.MaNXB</td>
                            <td>@item.TenNXB</td>
                            <td>@item.DiaChi</td>
                            <td>@item.Email</td>
                            <td class="action-buttons">
                                <button class="btn btn-edit" title="Chỉnh sửa"><i class="fas fa-edit"></i></button>
                                <button class="btn btn-delete" title="Xóa"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </main>
</div>

<!-- Modal cho NXB -->
<div id="nxb-modal" class="modal">
    <div class="modal-content large">
        <span class="close-nxb-modal">&times;</span>
        <h2 id="nxb-modal-title">Thêm Nhà Xuất Bản Mới</h2>
        <form id="nxb-form">
            <div class="form-row"><div class="form-group"><label for="ma-nxb">Mã NXB:</label><input type="text" id="ma-nxb" required></div><div class="form-group"><label for="ten-nxb">Tên Nhà Xuất Bản:</label><input type="text" id="ten-nxb" required></div></div>
            <div class="form-group"><label for="dia-chi">Địa chỉ:</label><input type="text" id="dia-chi"></div>
            <div class="form-row"><div class="form-group"><label for="sdt-nxb">Số điện thoại:</label><input type="tel" id="sdt-nxb"></div><div class="form-group"><label for="email-nxb">Email:</label><input type="email" id="email-nxb"></div></div>
            <button type="submit" class="submit-btn">Lưu Lại</button>
        </form>
    </div>
</div>

<!-- ======================= FOOTER (ĐÃ BỔ SUNG) ======================= -->
@Html.Partial("_FooterPartial")

