</div>

<!-- ======================= MODAL (CỬA SỔ POP-UP) ĐỂ THÊM/SỬA ĐỘC GIẢ ======================= -->
<div id="reader-modal" class="modal">
    <div class="modal-content large">
        <span class="close-reader-modal">&times;</span>
        <h2 id="reader-modal-title">Thêm Độc giả Mới</h2>
        <form id="reader-form">
            <div class="form-row">
                <div class="form-group">
                    <label for="ma-doc-gia">Mã Độc giả:</label>
                    <input type="text" id="ma-doc-gia" name="ma-doc-gia" required>
                </div>
                <div class="form-group">
                    <label for="ho-ten">Họ và Tên:</label>
                    <input type="text" id="ho-ten" name="ho-ten" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label for="lop">Lớp:</label>
                    <input type="text" id="lop" name="lop" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label for="username-modal">Username:</label>
                    <input type="text" id="username-modal" name="username-modal" required>
                </div>
                <div class="form-group">
                    <label for="password-modal">Mật khẩu (để trống nếu không đổi):</label>
                    <input type="password" id="password-modal" name="password-modal">
                </div>
            </div>
            <div class="form-group">
                <label for="tinh-trang-the">Tình Trạng Thẻ:</label>
                <select id="tinh-trang-the" name="tinh-trang-the" required>
                    <option value="active">Hoạt động</option>
                    <option value="locked">Bị khóa</option>
                </select>
            </div>
            <button type="submit" class="submit-btn">Lưu Lại</button>
        </form>
    </div>
</div>

