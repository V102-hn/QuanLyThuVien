
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/LayoutNguoiDung.cshtml";
}

<!-- ======================= PHẦN GIAO DIỆN CHUNG (ĐÃ BỔ SUNG) ======================= -->
@Html.Action("HeaderPartialView", "Admin")
<!-- ===================== KẾT THÚC PHẦN GIAO DIỆN CHUNG ===================== -->

<div class="admin-container">
    <!-- ======================= SIDEBAR ======================= -->
    @Html.Action("SidebarPartiView", "Admin")

    <!-- ======================= NỘI DUNG CHÍNH ======================= -->
    <main class="admin-main-content">
        <h1><i class="fas fa-user-shield"></i> Quản lý Người dùng Hệ thống</h1>

        <div class="toolbar">
            <input type="text" class="search-input" placeholder="Tìm kiếm theo tên đăng nhập, email...">
            <button id="add-user-btn" class="btn btn-primary"><i class="fas fa-user-plus"></i> Thêm Người dùng Mới</button>
        </div>

        <section class="data-table-section">
            <table>
                <thead>
                    <tr>
                        <th>Tên Đăng Nhập</th>
                        <th>Họ Tên</th>
                        <th>Email</th>
                        <th>Vai trò</th>
                        <th>Trạng Thái</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>admin</td>
                        <td>Quản Trị Viên</td>
                        <td>admin@muce.edu.vn</td>
                        <td><span class="role admin">Admin</span></td>
                        <td><span class="status active-card">Hoạt động</span></td>
                        <td class="action-buttons">
                            <button class="btn btn-edit" title="Chỉnh sửa"><i class="fas fa-edit"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td>thuthu01</td>
                        <td>Nguyễn Thị Lan</td>
                        <td>lan.nt@muce.edu.vn</td>
                        <td><span class="role librarian">Thủ thư</span></td>
                        <td><span class="status active-card">Hoạt động</span></td>
                        <td class="action-buttons">
                            <button class="btn btn-edit" title="Chỉnh sửa"><i class="fas fa-edit"></i></button>
                            <button class="btn btn-delete" title="Xóa"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td>thuthu02</td>
                        <td>Trần Văn Bình</td>
                        <td>binh.tv@muce.edu.vn</td>
                        <td><span class="role librarian">Thủ thư</span></td>
                        <td><span class="status locked-card">Bị khóa</span></td>
                        <td class="action-buttons">
                            <button class="btn btn-edit" title="Chỉnh sửa"><i class="fas fa-edit"></i></button>
                            <button class="btn btn-delete" title="Xóa"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </section>
    </main>
</div>

<!-- ======================= MODAL THÊM/SỬA NGƯỜI DÙNG ======================= -->
<div id="user-modal" class="modal">
    <div class="modal-content large">
        <span class="close-user-modal">&times;</span>
        <h2 id="user-modal-title">Thêm Người dùng Mới</h2>
        <form id="user-form">
            <div class="form-row">
                <div class="form-group">
                    <label for="username">Tên đăng nhập:</label>
                    <input type="text" id="username" name="username" required>
                </div>
                <div class="form-group">
                    <label for="full-name">Họ và Tên:</label>
                    <input type="text" id="full-name" name="full-name" required>
                </div>
            </div>
            <div class="form-group">
                <label for="email-user">Email:</label>
                <input type="email" id="email-user" name="email-user" required>
            </div>
            <div class="form-group">
                <label for="password-user">Mật khẩu (để trống nếu không đổi):</label>
                <input type="password" id="password-user" name="password-user">
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label for="role-select">Vai trò:</label>
                    <select id="role-select" name="role-select" required>
                        <option value="librarian">Thủ thư</option>
                        <option value="admin">Admin</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="status-select">Trạng Thái:</label>
                    <select id="status-select" name="status-select" required>
                        <option value="active">Hoạt động</option>
                        <option value="locked">Bị khóa</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="submit-btn">Lưu Lại</button>
        </form>
    </div>
</div>

